  </parent>
  <artifactId>toolkit-app</artifactId>
  <packaging>jar</packaging>
  <name>SC2 TK :: Tool Kit App</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>sc2toolkit.app.toolkit.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>game-client-api</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
